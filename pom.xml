  		<email>hello@raygun.io</email>
  		<organisation>Mindscape</organisation>
  		<organisationUrl>http://raygun.io</organisationUrl>
  		<roles>
  			<role>developer</role>
  		</roles>
  		<timezone>+12</timezone>
  	</developer>
  </developers>
  <scm>
